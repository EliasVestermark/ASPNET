@model ShowcaseViewModel

<section id="@Model.Id">
    <div class="container">
        <div class="content">
            <h1>@Model.Title</h1>
            <p>@Model.Text</p>
            <a class="btn-theme-s" asp-controller="@Model.Link.ControllerName" asp-action="@Model.Link.ActionName">@Model.Link.Text</a>
            <h6>Largest companies use our tool to work efficiently</h6>
            <div class="brands">
                @if (Model.Brands != null)
                {
                    foreach (var brand in Model.Brands)
                    {
                        <img src="@brand.ImageUrl" alt="@brand.Alt"/>
                    }
                }
            </div>
        </div>
        <img class="background-image" src="images/showcase-taskmaster.svg" alt="Image of  the Task Master Dashboard">
    </div>
</section>